                                            <!--enctype="multipart/form-data"-->
                                           <div class="form-group">
                                            <div class="col-sm-4">
                                              <input type="text" class="form-control Auteur" name="Auteur" placeholder="Auteur">
                                            </div>
                                            <div class="col-sm-4">
                                              <input type="text" class="form-control Date" name="date"  placeholder="Date">
                                            </div>
                                            <div class="col-sm-4">
